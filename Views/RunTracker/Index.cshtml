@model IEnumerable<SampleCrudApp.Models.RunTracker>

@{
    ViewData["Title"] = "Run Tracker";
}

<head>
    <link href="https://fonts.googleapis.com/css2?family=Orbitron&family=Rubik:wght@400;700&display=swap" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <style>
        body {
            font-family: 'Rubik', sans-serif;
            background: linear-gradient(135deg, #0f2027, #203a43, #2c5364);
            color: #e4e4e4;
        }

        .container {
            font-family: 'rubik', sans-serif;
            margin-top: 50px;
            color: white !important;
        }

        h2 {
            font-family: 'rubik', sans-serif;
            text-transform: uppercase;
            color: #ebc999;
            text-shadow: 0px 4px 10px rgba(0, 0, 0, 0.7);
            margin-bottom: 30px;
        }

        .btn-primary {
            background-color: #ebc999;
            border: none;
            color: #4d3227;
            padding: 10px 20px;
            font-size: 16px;
            font-weight: bold;
            border-radius: 5px;
            box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.4);
            transition: all 0.3s ease;
        }

        .btn-primary:hover {
            background-color: #cd7700;
            color: white;
            transform: scale(1.1);
        }

        .table-container {
            max-height: 500px; 
            overflow-y: auto; 
            margin-top: 20px;
        }

        .table {
            background-color: rgba(255, 255, 255, 0.1);
            border-collapse: collapse;
            width: 100%;
            border-radius: 10px;
            overflow: hidden;
            box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.5);
        }

        .table th,
        .table td {
            text-align: center;
            padding: 15px;
            border-bottom: 1px solid rgba(255, 255, 255, 0.2);
            color: white;
        }

        .table th {
            background: #4d3227;
            color: #ebc999;
            text-transform: uppercase;
            font-weight: bold;
        }

        .table tr:nth-child(even) {
            background: rgba(255, 255, 255, 0.05);
        }

        .btn-warning,
        .btn-danger {
            border: none;
            font-weight: bold;
            font-size: 14px;
            padding: 8px 12px;
            transition: all 0.3s ease;
        }

        .btn-warning {
            background: #f7b731;
            color: #4d3227;
        }

        .btn-warning:hover {
            background: #eab308;
            color: white;
            transform: scale(1.1);
        }

        .btn-danger {
            background: #ff6b6b;
            color: white;
        }

        .btn-danger:hover {
            background: #ff3b3b;
            transform: scale(1.1);
        }
    </style>
</head>

<div class="container">
    <h2>Run Tracker</h2>
    <a class="btn btn-primary mb-3" href="@Url.Action("Create", "RunTracker")">Add New Run</a>

    <div class="table-container">
        <table class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>Location</th>
                    <th>Date</th>
                    <th>Distance (Km)</th>
                    <th>Pace</th>
                    <th>Description</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var run in Model)
                {
                    <tr>
                        <td>@run.Location</td>
                        <td>@run.Date.ToString("yyyy-MM-dd")</td>
                        <td>@run.Distance</td>
                        <td>@run.Pace</td>
                        <td>@run.Description</td>
                        <td>
                            <a class="btn btn-warning" href="@Url.Action("Edit", "RunTracker", new { id = run.Id })">Edit</a>
                            <a class="btn btn-danger" href="@Url.Action("Delete", "RunTracker", new { id = run.Id })">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
