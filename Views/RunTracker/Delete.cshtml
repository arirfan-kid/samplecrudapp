@model SampleCrudApp.Models.RunTracker

@{
    ViewData["Title"] = "Delete Run";
}

<head>
    <link href="https://fonts.googleapis.com/css2?family=Orbitron&family=Rubik:wght@400;700&display=swap" rel="stylesheet">
    <style>
        body {
            font-family: 'Rubik', sans-serif;
            background: linear-gradient(135deg, #0f2027, #203a43, #2c5364);
            color: #e4e4e4;
            margin: 0;
            padding: 0;
        }

        .container {
            margin: 50px auto;
            max-width: 600px;
            background-color: rgba(255, 255, 255, 0.05);
            padding: 30px;
            border-radius: 10px;
            box-shadow: 0px 8px 20px rgba(0, 0, 0, 0.6);
            text-align: center;
        }

        h4 {
            font-family: 'Orbitron', sans-serif;
            font-size: 1.8rem;
            color: #eb4a4a;
            text-shadow: 0px 4px 10px rgba(0, 0, 0, 0.7);
            margin-bottom: 20px;
        }

        dl {
            text-align: left;
            margin: 20px 0;
        }

        dt {
            font-weight: bold;
            color: #ebc999;
        }

        dd {
            margin-bottom: 10px;
            color: #e4e4e4;
        }

        .btn-danger {
            background-color: #eb4a4a;
            border: none;
            color: white;
            padding: 12px 25px;
            font-size: 16px;
            font-weight: bold;
            border-radius: 5px;
            box-shadow: 0px 8px 15px rgba(0, 0, 0, 0.4);
            transition: all 0.3s ease;
        }

        .btn-danger:hover {
            background-color: #b73838;
            transform: scale(1.05);
            box-shadow: 0px 10px 20px rgba(0, 0, 0, 0.6);
        }

        .btn-secondary {
            background-color: rgba(255, 255, 255, 0.2);
            border: 1px solid #ebc999;
            color: #ebc999;
            padding: 12px 25px;
            font-size: 16px;
            font-weight: bold;
            border-radius: 5px;
            margin-left: 10px;
            transition: all 0.3s ease;
        }

        .btn-secondary:hover {
            background-color: #ebc999;
            color: #2c5364;
            transform: scale(1.05);
        }

        form {
            margin-top: 20px;
        }
    </style>
</head>

<div class="container">
    <h4>Are you sure you want to delete this run?</h4>
    <div>
        <dl class="row">
            <dt class="col-sm-4">Location</dt>
            <dd class="col-sm-8">@Model.Location</dd>
            <dt class="col-sm-4">Date</dt>
            <dd class="col-sm-8">@Model.Date.ToString("yyyy-MM-dd")</dd>
            <dt class="col-sm-4">Length (Km)</dt>
            <dd class="col-sm-8">@Model.Distance</dd>
            <dt class="col-sm-4">Pace</dt>
            <dd class="col-sm-8">@Model.Pace</dd>
            <dt class="col-sm-4">Description</dt>
            <dd class="col-sm-8">@Model.Description</dd>
        </dl>
    </div>

    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger">Yes, Delete</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>
