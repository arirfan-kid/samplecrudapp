@model SampleCrudApp.Models.RunTracker

@{
    ViewData["Title"] = "Add New Run";
}

<head>
    <link href="https://fonts.googleapis.com/css2?family=Orbitron&family=Rubik:wght@400;700&display=swap" rel="stylesheet">
    <style>
        body {
            font-family: 'Rubik', sans-serif;
            background: linear-gradient(135deg, #0f2027, #203a43, #2c5364);
            color: #e4e4e4;
        }

        .container {
            margin-top: 50px;
            background-color: rgba(255, 255, 255, 0.05);
            padding: 30px;
            border-radius: 10px;
            box-shadow: 0px 8px 20px rgba(0, 0, 0, 0.6);
        }

        h2 {
            font-family: 'Orbitron', sans-serif;
            text-transform: uppercase;
            color: #ebc999;
            text-shadow: 0px 4px 10px rgba(0, 0, 0, 0.7);
            margin-bottom: 30px;
            text-align: center;
        }

        label {
            font-weight: bold;
            color: #e4e4e4;
        }

        .form-control {
            background-color: rgba(255, 255, 255, 0.1);
            color: #e4e4e4;
            border: 1px solid rgba(255, 255, 255, 0.3);
            border-radius: 5px;
            padding: 10px;
            transition: border-color 0.3s ease;
        }

        .form-control:focus {
            border-color: #ebc999;
            box-shadow: 0px 0px 8px rgba(235, 201, 153, 0.8);
            outline: none;
        }

        .btn-container {
            text-align: center;
            margin-top: 20px;
            justify-content: center;
            gap: 10px;
            display: flex;
        }
        
        .btn-primary {
            background: none;
            border: 2px solid;
            color: #fff;
            font-size: 1.2rem;
            font-family: 'Rubrik', sans-serif;
            font-weight: bold;
            text-transform: uppercase;
            padding: 15px 30px;
            border-radius: 30px;
            cursor: pointer;
            transition: all 0.4s ease;
        }

        .btn-primary:hover {
            background-color: none;
            color: white;
            transform: scale(1.05);
            box-shadow: 0px 10px 20px rgba(0, 0, 0, 0.6);
        }

        .btn-cancel {
            background: none;
            border: 2px solid #eb4a4a;
            color: #eb4a4a;
            font-size: 1.2rem;
            font-family: 'rubrik', sans-serif;
            font-weight: bold;
            text-transform: uppercase;
            padding: 15px 30px;
            border-radius: 30px;
            cursor: pointer;
            transition: all 0.4s ease;
        }

        .btn-cancel:hover {
            background-color: #eb4a4a;
            color: white;
            transform: scale(1.05);
            box-shadow: 0px 10px 20px rgba(0, 0, 0, 0.6);
        }

        .text-danger {
            font-size: 14px;
            color: #ff6b6b;
        }
    </style>
</head>

<div class="container">
    <h2>Add New Run</h2>
    <form asp-action="Create">
        <div class="form-group mb-4">
            <label for="Location">Location</label>
            <input asp-for="Location" class="form-control" placeholder="Enter the location of your run" />
            <span asp-validation-for="Location" class="text-danger"></span>
        </div>
        <div class="form-group mb-4">
            <label for="Date">Date</label>
            <input asp-for="Date" class="form-control" type="date" />
            <span asp-validation-for="Date" class="text-danger"></span>
        </div>
        <div class="form-group mb-4">
            <label for="Length">Length (Km)</label>
            <input asp-for="Distance" class="form-control" type="number" step="0.1" placeholder="Enter distance in kilometers" />
            <span asp-validation-for="Distance" class="text-danger"></span>
        </div>
        <div class="form-group mb-4">
            <label for="Pace">Pace</label>
            <input asp-for="Pace" class="form-control" placeholder="Enter your pace" />
            <span asp-validation-for="Pace" class="text-danger"></span>
        </div>
        <div class="form-group mb-4">
            <label for="Description">Description</label>
            <textarea asp-for="Description" class="form-control" rows="4" placeholder="Add any additional notes or description"></textarea>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>
        <div class="btn-container">
            <button type="submit" class="btn-primary">Save</button>
             <a asp-action="Index" class="btn-cancel">Cancel</a>
        </div>
    </form>
</div>
