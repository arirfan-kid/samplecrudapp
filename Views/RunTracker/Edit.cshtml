@model SampleCrudApp.Models.RunTracker

@{
    ViewData["Title"] = "Edit Run";
}

<head>
    <link href="https://fonts.googleapis.com/css2?family=Rajdhani:wght@300;600&family=Orbitron:wght@400;700&display=swap" rel="stylesheet">
    <style>
        body {
            font-family: 'Rubrik', sans-serif;
            background: linear-gradient(135deg, #0f2027, #203a43, #2c5364);
            color: #e0e0e0;
            margin: 0;
            padding: 0;
            overflow-x: hidden;
        }

        .container {
            max-width: 800px;
            margin: 50px auto;
            padding: 30px;
            background: rgba(255, 255, 255, 0.05);
            border-radius: 20px;
            box-shadow: 0px 10px 30px rgba(0, 0, 0, 0.8), inset 0 0 30px rgba(255, 255, 255, 0.1);
            backdrop-filter: blur(10px);
            border: 1px solid rgba(255, 255, 255, 0.2);
            position: relative;
        }

        /* Header Section */
        .header {
            text-align: center;
            margin-bottom: 20px;
            position: relative;
        }

        .header h2 {
            font-family: 'Rubrik', sans-serif;
            font-weight: bold;
            color: #cd7700;
            font-size: 2.5rem;
            text-transform: uppercase;
            letter-spacing: 2px;
        }

        .header:before {
            content: '';
            position: absolute;
            top: 0;
            left: 50%;
            transform: translateX(-50%);
            width: 120px;
            height: 3px;
            background: linear-gradient(90deg, #cd7700, #ebc999);
        }

        /* Form Section */
        form {
            margin-top: 20px;
        }

        .form-group {
            position: relative;
            margin-bottom: 20px;
        }

        label {
            font-size: 1rem;
            font-weight: 600;
            color: #e0e0e0;
            display: block;
            margin-bottom: 5px;
        }

        input, textarea {
            width: 100%;
            padding: 12px 15px;
            font-size: 1rem;
            border-radius: 10px;
            border: none;
            background: rgba(255, 255, 255, 0.1);
            color: #e0e0e0;
            outline: none;
            transition: all 0.3s ease;
        }

        input:focus, textarea:focus {
            background: rgba(255, 255, 255, 0.15);
            box-shadow: 0px 0px 15px #cd7700, inset 0 0 15px #cd7700;
        }

        textarea {
            resize: none;
            height: 120px;
        }

        /* Button Styles */
        .btn-container {
            text-align: center;
            margin-top: 30px;
        }

        .btn-primary {
            background: none;
            border: 2px solid;
            color: #fff;
            font-size: 1.2rem;
            font-family: 'Rubrik', sans-serif;
            font-weight: bold;
            text-transform: uppercase;
            padding: 15px 30px;
            border-radius: 30px;
            cursor: pointer;
            transition: all 0.4s ease;
        }

        .btn-primary:hover {
            transform: translateY(-5px);
            box-shadow: 0px 12px 25px #4d3227;
        }

        .btn-cancel {
            background: none;
            border: 2px solid #ff6b6b;
            color: #ff6b6b;
            font-size: 1.2rem;
            font-family: 'rubrik', sans-serif;
            font-weight: bold;
            text-transform: uppercase;
            padding: 15px 30px;
            border-radius: 30px;
            cursor: pointer;
            transition: all 0.4s ease;
        }

        .btn-cancel:hover {
            background: #ff3b3b;
            box-shadow: 0px 8px 15px #ff3b3b;
            border: 2px solid #ff3b3b;
        }

        /* Validation Error Styling */
        .text-danger {
            color: #ff6666;
            font-size: 0.85rem;
            margin-top: 5px;
            display: block;
            text-shadow: 0px 2px 5px rgba(255, 102, 102, 0.7);
        }

        /* Responsive Design */
        @@media (max-width: 768px) {
            .container {
                padding: 20px;
            }

            .header h2 {
                font-size: 2rem;
            }

            .btn-primary, .btn-cancel {
                font-size: 1rem;
                padding: 10px 20px;
            }
        }
    </style>
</head>

<div class="container">
    <div class="header">
        <h2>Edit Run</h2>
    </div>
    <form asp-action="Edit">
        <div class="form-group">
            <label for="Location">Location</label>
            <input asp-for="Location" placeholder="Enter the location" />
            <span asp-validation-for="Location" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label for="Date">Date</label>
            <input asp-for="Date" type="date" />
            <span asp-validation-for="Date" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label for="Distance">Distance (Km)</label>
            <input asp-for="Distance" type="number" step="0.1" placeholder="Enter distance (e.g., 5.0)" />
            <span asp-validation-for="Distance" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label for="Pace">Pace</label>
            <input asp-for="Pace" placeholder="Enter pace (e.g., 5:30)" />
            <span asp-validation-for="Pace" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label for="Description">Description</label>
            <textarea asp-for="Description" placeholder="Add some notes about the run"></textarea>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>
        <div class="btn-container">
            <button type="submit" class="btn-primary">Save Changes</button>
            <a asp-action="Index" class="btn-cancel">Cancel</a>
        </div>
    </form>
</div>
